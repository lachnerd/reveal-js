<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>revealjs-cdworkshop</id>
  <baseDirectory>${basedir}/build/default</baseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/bower_components</directory>
      <outputDirectory>bower_components</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/content</directory>
      <outputDirectory>content</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/css</directory>
      <outputDirectory>css</outputDirectory>
      <includes>
        <include>**/*.css</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/js</directory>
      <outputDirectory>js</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/media</directory>
      <outputDirectory>media</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/plugin</directory>
      <outputDirectory>plugin</outputDirectory>
      <includes>
        <include>**/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>index.html</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
